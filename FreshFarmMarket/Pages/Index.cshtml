@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center">
    <h1 class="display-4">Profile Info</h1>
</div>

<form class="mt-3" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-md-8">

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.FullName"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RModel.FullName" readonly />
                    <span asp-validation-for="RModel.FullName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.CreditCardNo"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RModel.CreditCardNo" readonly />
                    <span asp-validation-for="RModel.CreditCardNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.Gender"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RModel.Gender" readonly />
                    <span asp-validation-for="RModel.Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.MobileNo"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RModel.MobileNo" readonly />
                    <span asp-validation-for="RModel.CreditCardNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.DeliveryAddress"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RModel.DeliveryAddress" readonly />
                    <span asp-validation-for="RModel.DeliveryAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.Email"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RModel.Email" readonly />
                    <span asp-validation-for="RModel.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="RModel.AboutMe"></label>
                <div class="col-sm-10">
                    <textarea asp-for="RModel.AboutMe" cols="25" rows="3" class="form-control" readonly></textarea>
                    <span asp-validaton-for="RModel.AboutMe" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="col-md-4">
            <img id="imgPreview" class="rounded-circle" style="height:300px;width:300px;object-fit:cover"
                 src="@(string.IsNullOrEmpty(Model.RModel?.Photo) ? "/uploads/profile/user.png" : Model.RModel?.Photo)"
                 onerror="this.src='/uploads/user.png'" />
            <input class="form-control d-none" asp-for="RModel.Photo" />
        </div>

    </div>
</form>

<script>
    function showImgPreview(input) {
        if (input.files[0]) {
            var uploading = new FileReader();
            uploading.onload = function (displaying) {
                $("#imgPreview").attr('src', displaying.target.result);
            }
            uploading.readAsDataURL(input.files[0]);
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}