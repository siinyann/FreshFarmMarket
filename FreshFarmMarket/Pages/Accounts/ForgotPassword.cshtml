@page
@model FreshFarmMarket.Pages.Accounts.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h1 class="bg-info text-white">Forgot Password</h1>

<form method="post">
    <div class="form-group">
        <label class="form-label" asp-for="PModel.Email"></label>
        <input type="text" asp-for="PModel.Email" class="form-control" />
        <span asp-validation-for="PModel.Email" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
